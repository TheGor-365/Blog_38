<div class="container mt-5 mb-5">
  <h2>Contact us</h2>
</div>

<div class="container">
  <%= form_for :contact, url: contacts_path do |f| %>
    <p>
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :message %><br>
      <%= f.text_area :message %>
    </p>

    <%= f.submit 'Send message' %>
  <% end %>
</div>
